{% extends 'base.html.twig' %}


{% block title %}{{media.title}}{% endblock %}
{% block stylesheets %}{{encore_entry_link_tags('mediaIndiv')}}{% endblock %}

{% block body %}
<div class="slide" id="mediaIndiv">
    <div class="banneerCover relative"><img src="/uploads/{{media.cover}}" alt="Image du film {{media.title}}">   <div class="shadowWhite"></div></div>
             
    <div class="wrapper">
        <div class="media_presentation flex flex-wrap gap-12  w-full">
            {# <div class="media_presentation_left relative w-3/12"> #}
                <img src="/uploads/{{media.poster}}" class=" max-sm:w-full max-sm:h-3/5 md:w-3/12 object-cover" alt="Image du film {{media.title}}">
            {# </div> #}
            <div class="media_presentation_content_global max-sm:w-full  w-8/12">
                <h3 class="display-2xl object uppercas">{{media.title}}</h3>
                <div class="media_presentation_content flex-wrap flex max-sm:gap-5 gap-20">
                    <div class="media_presentation_content_left max-sm:w-12/12  md:w-8/12 justify-between">
                        <div class="flex gap-5 flex-col">
