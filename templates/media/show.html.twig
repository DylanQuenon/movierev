                            <p class="text-lg urbanist">{{media.synopsis|raw|nl2br}}</p>
                        </div>
                        <div class="media_presentation_content_left_actions items-center flex flex-wrap gap-6">
                            {% include "partials/_trailer_button.html.twig" with {'trailerUrl': media.trailer} %}
