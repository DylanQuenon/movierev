{% extends "admin/base.html.twig" %}

{% block title %}Modification de l'image de {{ mediaName }}{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Modification de l'image de {{ mediaName }}</h1>

    <a href="{{ path('admin_media_edit', {'id': media.id}) }}" class="bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-600 mb-4 inline-block">Retour</a>
    
    {{ form_start(myForm) }}
    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-4">
            <h2 class="text-xl font-semibold mb-2">Corriger l'image {{ imageType }}</h2>
            <img src="{{ asset('uploads/' ~ oldImagePath) }}" alt="{{ mediaName }}" class="w-24 h-24 object-cover mb-4">
        </div>
        <div class="mb-4">
            {{ form_row(myForm.newPicture) }}
        </div>
        <div>
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">
                <i class="fas fa-check mr-2"></i>
                Enregistrer les Modifications
            </button>
        </div>
    </div>
    {{ form_end(myForm) }}
</div>
{% endblock %}
