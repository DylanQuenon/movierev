{% block _media_castings_widget %}
    <p class="text-lg font-semibold mb-2">Ici, vous pouvez ajouter vos propres images</p>
    {{ form_widget(form, {'attr': {'class': 'mt-2'}}) }}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="mt-4">
        <button type="button" id="add-castings" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Ajouter une image</button>
    </div> 
{% endblock %}

{% block _media_castings_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _media_castings_entry_widget %}
    <div class="my-4 border border-gray-300 rounded-lg p-4" id="block_{{ id }}">
        <div class="flex items-center">
            <div class="flex-1 mr-4">
                <div class="flex">
                    <div class="flex-1 mr-2">
                        {{ form_widget(form.actor, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                        {{ form_errors(form.actor) }}
                    </div>
                    <div class="flex-1">
                        {{ form_widget(form.role, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                        {{ form_errors(form.role) }}
                    </div>
                </div>
            </div>
            <div>
                <button type="button" class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600" data-action="delete" data-target="#block_{{ id }}">X</button>
            </div>
        </div>
    </div>
{% endblock %}
