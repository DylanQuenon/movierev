{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord administration{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="mb-8">
            <h1 class="text-3xl font-bold mb-2">Tableau de bord administration</h1>
            <p class="text-gray-600">Bienvenue sur le tableau de bord de l'administration!</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h5 class="text-xl font-semibold mb-2">Nombre d'utilisateurs</h5>
                <p class="text-gray-700 mb-4">{{ stats.users }} utilisateurs</p>
                <i class="fas fa-users text-4xl text-blue-500"></i>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
            <h5 class="text-xl font-semibold mb-4">Graphique des inscriptions par mois</h5>
            <canvas id="inscriptions-chart" class="w-full h-64"></canvas>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('inscriptions-chart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ stats.registrationStats|map(stat => stat.month)|json_encode|raw }},
            datasets: [{
                label: 'Ã‰volution des inscriptions par mois',
                data: {{ stats.registrationStats|map(stat => stat.count)|json_encode|raw }},
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
{% endblock %}
